       (kbd "t") 'ibuffer-toggle-marks
       (kbd "u") 'ibuffer-unmark-forward
       (kbd "=") 'ibuffer-diff-with-file

       ;; custom stuff
       (kbd "j") 'evil-next-line
       (kbd "k") 'evil-previous-line
       (kbd "o") 'ibuffer-visit-buffer
       ;; ...
       )
     )
   )

